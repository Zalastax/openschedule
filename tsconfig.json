{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "strictNullChecks": true,
      "jsx": "react",
      "module": "es2015",
      "moduleResolution": "node",
      "baseUrl": "./src",
      "target": "es5"
    },
    "exclude": [
        "node_modules",
        "bower_components"
    ],
    "awesomeTypescriptLoaderOptions": {}
}
