flex()
  display: flex

anchor()
  position: relative

.calendar
  width: 100%
  display: flex
  flex-direction: row
  flex-wrap: wrap

.mobilehidden

.column
  width: 100%
  margin: 0
  padding: 0
  list-style: none

.weekdays
  composes: column mobilehidden
  flex()
  height: 40px
  background: #8e352e

.weekday
  flex-basis: (100% / 7)
  align-items: flex-start
  justify-content: flex-end
  min-height: 20%
  padding: 5px
  text-align: center
  text-transform: uppercase
  line-height: 20px
  padding: 10px 6px
  color: #fff
  font-size: 13px

.days
  composes: column
  flex()
  anchor()
  margin-top: 3px
  margin-bottom: 3px

.otherDays
  composes: column
  anchor()
  margin-right: 3px

  &:last-child
    margin-right: 0px

.date
  display: flex
  align-items: center
  padding-bottom: 0.1em
  justify-content: center
  background: #333
  color: #fff
  border-radius: 50%
  width: 2em
  height: 2em
  float: right
  margin-right: 5px
  margin-top: 5px

.height
  height: 3px


@media (max-width: 768px)
  .mobilehidden
    display: none
  
  .otherDays
    margin-bottom: 10px

  .days
    display: block
